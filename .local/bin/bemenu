#!/usr/bin/env sh

. "$GUI_ENV"

exec "/usr/bin/bemenu" \
  --tb \
  --tf \
  --fb \
  --ff \
  --cb \
  --cf \
  --nb "$GUI_COLOR_0" \
  --nf "$GUI_COLOR_FOREGROUND" \
  --hb \
  --hf \
  --fbb \
  --fbf \
  --sb "$GUI_COLOR_FOREGROUND" \
  --sf "$GUI_COLOR_0" \
  --ab \
  --af \
  --scb \
  --scf \
  --fn "pango:${GUI_FONT_FAMILY_GUI} ${GUI_FONT_STYLE} ${GUI_FONT_SIZE}" \
  -H "28px" \
  -l "$GUI_MENU_LINE_COUNT" \
  -p "" \
  -i \
  -b \
  --fixed-height \
  "$@"
