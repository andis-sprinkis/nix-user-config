#!/usr/bin/env sh
foreground="#d4d4d4"
color0="#1e1e1e"
font="sans-serif medium 13.5"

exec /usr/bin/bemenu \
  -i \
  --tb \
  --tf \
  --fb \
  --ff \
  --cb \
  --cf \
  --nb "$color0" \
  --nf "$foreground" \
  --hb \
  --hf \
  --fbb \
  --fbf \
  --sb "$foreground" \
  --sf "$color0" \
  --ab \
  --af \
  --scb \
  --scf \
  -p "" \
  -b \
  -l 25 \
  --fn "$font" \
  "$@"
