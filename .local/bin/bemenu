#!/usr/bin/env sh
. "${XDG_CONFIG_HOME:-$HOME/.config}/shell/gui.sh"

exec "/usr/bin/bemenu" \
  --tb \
  --tf \
  --fb \
  --ff \
  --cb \
  --cf \
  --nb "$GUI_COLOR_0" \
  --nf "$GUI_COLOR_FOREGROUND" \
  --hb \
  --hf \
  --fbb \
  --fbf \
  --sb "$GUI_COLOR_FOREGROUND" \
  --sf "$GUI_COLOR_0" \
  --ab \
  --af \
  --scb \
  --scf \
  --fn "pango:${GUI_FONT_FAMILY_GUI} ${GUI_FONT_STYLE} ${GUI_FONT_SIZE}" \
  -l "25" \
  -p "" \
  -i \
  -b \
  "$@"
