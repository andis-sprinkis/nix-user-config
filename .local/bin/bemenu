#!/usr/bin/env sh
. "${XDG_CONFIG_HOME:-$HOME/.config}/shell/gui.sh"

foreground="$GUI_COLOR_FOREGROUND"
color0="$GUI_COLOR_0"
font="pango:${GUI_FONT_FAMILY_GUI} ${GUI_FONT_STYLE} ${GUI_FONT_SIZE}"

exec /usr/bin/bemenu \
  --tb \
  --tf \
  --fb \
  --ff \
  --cb \
  --cf \
  --nb "$color0" \
  --nf "$foreground" \
  --hb \
  --hf \
  --fbb \
  --fbf \
  --sb "$foreground" \
  --sf "$color0" \
  --ab \
  --af \
  --scb \
  --scf \
  --fn "$font" \
  -l "25" \
  -p "" \
  -i \
  -b \
  "$@"
