#!/usr/bin/env sh
set -eu

status="$(wpctl "get-volume" "$1")"

if [ -z "$status" ]; then
  exit
fi

vol_float="${status##Volume: }"
vol_float="${vol_float%% *}"
vol_int="$(awk "BEGIN{print 100*${vol_float}}")"
muted="${status##Volume: * }"
muted="${muted##Volume: *}"

if ! pidof -q "notify-send"; then
  notify-send \
    -a "Sound volume (${1})" \
    -u "low" \
    -t "1150" \
    -h "string:x-canonical-private-synchronous:volume" \
    -h "int:value:${vol_int}" \
    "${vol_int}%${muted:+, MUTED}"
fi
