#!/usr/bin/env sh
set -eu
IFS_="$IFS"

df_output="target,pcent,used,avail,size,source"

data="$(LC_ALL=C df --output="$df_output" \
  | column -t -o";" | sed -e 's/\s*\;/\;/g' \
  | tail -n "+2" \
  | sort)"

SEVERITY="0"

set_severity() {
  if [ "$1" -ge "90" ]; then
    SEVERITY="2"
    return "0"
  fi

  if [ "$1" -ge "70" ]; then
    SEVERITY="1"
    return "0"
  fi

  SEVERITY="0"
  return "0"
}

kb_mb="1024"
kb_gb="1048576"
kb_tb="1073741824"
kb_pb="1099511627776"
kb_eb="1125899906842624"

human() {
  if [ "$1" -lt "$kb_mb" ]; then printf "%s KB\n" "$1";  return; fi
  if [ "$1" -lt "$kb_gb" ]; then printf "%s MB\n" "$(echo "scale = 1; ${1} / ${kb_mb}" | bc)"; return; fi
  if [ "$1" -lt "$kb_tb" ]; then printf "%s GB\n" "$(echo "scale = 1; ${1} / ${kb_gb}" | bc)"; return; fi
  if [ "$1" -lt "$kb_pb" ]; then printf "%s TB\n" "$(echo "scale = 1; ${1} / ${kb_tb}" | bc)"; return; fi
  if [ "$1" -lt "$kb_eb" ]; then printf "%s PB\n" "$(echo "scale = 1; ${1} / ${kb_pb}" | bc)"; return; fi
}

severity_fmt() {
  case "$SEVERITY" in
    "0")
      printf "%s" "$1"
    ;;
    "1")
      printf "\x1b[0;1;33m%s\x1b[0m\n" "$1"
    ;;
    "2")
      printf "\x1b[0;1;31m%s\x1b[0m\n" "$1"
    ;;
  esac
}

severity_sym() {
  case "$SEVERITY" in
    "0")
      return
    ;;
    "1")
      printf "%s" "? "
    ;;
    "2")
      printf "%s" "! "
    ;;
  esac
}

IFS="
"
for line in $data; do
  IFS="$IFS_"

  val_use_pcnt="$(echo "$line" | cut -d";" -f2 | sed -e "s/\%//g")"
  val_free_pcnt="$((100 - val_use_pcnt))"
  val_p_mount="$(echo "$line" | cut -d";" -f1)"
  val_use_b="$(echo "$line" | cut -d";" -f3)"
  val_free_b="$(echo "$line" | cut -d";" -f4)"
  val_size_b="$(echo "$line" | cut -d";" -f5)"
  val_p_dev="$(echo "$line" | cut -d";" -f6)"

  set_severity "$val_use_pcnt"

  echo "- ${val_p_mount} | ${val_p_dev} | $(human "$val_size_b")
  $(severity_fmt "$(severity_sym)")Use: $(severity_fmt "${val_use_pcnt}%") ($(severity_fmt "$(human "$val_use_b")")) | Free: $(severity_fmt "${val_free_pcnt}%") ($(severity_fmt "$(human "$val_free_b")"))"
done
IFS="$IFS_"
