#!/usr/bin/env sh

exec less \
  --LINE-NUMBERS \
  --LONG-PROMPT \
  --RAW-CONTROL-CHARS \
  --clear-screen \
  --HILITE-UNREAD \
  --incsearch \
  --ignore-case \
  --jump-target ".5" \
  --line-num-width "5" \
  --mouse \
  --status-column \
  --tabs "2" \
  --tilde \
  --use-color \
  --color=P- \
  --color=Nk \
  --wheel-lines "3" \
  --wordwrap \
  "$@"
