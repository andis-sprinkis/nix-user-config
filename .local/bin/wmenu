#!/usr/bin/env sh
foreground="$(xrdb -get foreground | cut -c2-)"
color0="$(xrdb -get color0 | cut -c2-)"
font="$(xrdb -get font)"

exec /usr/bin/wmenu \
  -i \
  -n "$foreground" \
  -N "$color0" \
  -M "$foreground" \
  -m "$color0" \
  -S "$foreground" \
  -s "$color0" \
  -b \
  -l 25 \
  -f "$font" \
  "$@"
