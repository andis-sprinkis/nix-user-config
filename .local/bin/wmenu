#!/usr/bin/env sh

. "$GUI_ENV"

exec "/usr/bin/wmenu" \
  -N "$GUI_COLOR_BACKGROUND" \
  -n "$GUI_COLOR_FOREGROUND" \
  -S "$GUI_COLOR_FOREGROUND" \
  -s "$GUI_COLOR_BACKGROUND" \
  -f "pango:${GUI_FONT_FAMILY_GUI} ${GUI_FONT_STYLE} ${GUI_FONT_SIZE}" \
  -l "$GUI_MENU_LINE_COUNT" \
  -i \
  -b \
  "$@"
