#!/usr/bin/env sh

systemctl is-active --quiet smb && {
  win_title="\033]0;Stop SMB service\007"
  $TERMINAL -e $SHELL -c "echo -n \"$win_title\"; systemctl stop smb; read"
} || {
  win_title="\033]0;Start SMB service\007"
  $TERMINAL -e $SHELL -c "echo -n \"$win_title\"; systemctl start smb; read"
}
