#!/usr/bin/env sh

# TODO: convert to POSIX sh

case "$@" in
  http://*|https://*)
    exec web_browser_desktop "$@"
  ;;
  file://*)
    no_pre=$(echo "$@" | sed -n 's/file:\/\///p')
    item_to_open=$(readlink -f "$(printf '%b\n' "${no_pre//%/\\x}")")
  ;;
  *)
    item_to_open="$(readlink -f "$@")"
  ;;
esac

[ "$item_to_open" ] && {
  mime="$(file --mime-type -b "$item_to_open")"
  [ "$mime" ] && [ "$(xdg-mime query default "$mime")" ] && exec "/usr/bin/xdg-open" "$item_to_open"
}

echo "$(basename "$0"): Preventing item without a recognized handler from being passed to /usr/bin/xdg-open"
exit 1
