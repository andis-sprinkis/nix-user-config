#!/usr/bin/env sh
. "${XDG_CONFIG_HOME:-$HOME/.config}/shell/gui.sh"

exec "/usr/bin/dmenu" \
  -nf "$GUI_COLOR_FOREGROUND" \
  -nb "$GUI_COLOR_0" \
  -sb "$GUI_COLOR_FOREGROUND" \
  -sf "$GUI_COLOR_0" \
  -fn "${GUI_FONT_FAMILY_GUI}:style=${GUI_FONT_STYLE}:size=${GUI_FONT_SIZE_X11}" \
  -l "$GUI_MENU_LINE_COUNT" \
  -i \
  -b \
  "$@"
