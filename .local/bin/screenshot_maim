#!/usr/bin/env sh
set -e

msg_usage="$(basename "$0") usage: [--active] [--select] [--help | -h]"

path_dir="$HOME/screen"
path_file="${path_dir}/$(date "+%s").png"

case "$1" in
  --help | -h)
    echo "$msg_usage"
    ;;
  --active)
    mkdir -p "$path_dir"
    maim -u --window "$(xdotool getactivewindow)" "$path_file"
    ;;
  --select)
    mkdir -p "$path_dir"
    maim -u --select "$path_file"
    ;;
  *)
    maim -u "$msg_usage"
    exit 1
    ;;
esac
