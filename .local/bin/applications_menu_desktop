#!/usr/bin/env sh

path_appimage="$HOME/.local/opt/appimage/"
cmd_dmenu="(cat; stest -flx \"${path_appimage}\" | awk '{ print \"${path_appimage}\"\$0 }' | sort -u) | dmenu"

exec j4-dmenu-desktop \
  --no-generic \
  --display-binary \
  --dmenu="$cmd_dmenu" \
  --usage-log=${XDG_CACHE_HOME:-HOME/.cache}/j4-dmenu-desktop/log
