#!/usr/bin/env sh
set -eu
IFS_="$IFS"
NL="
"

script="$(basename "$0")"
msg_usage="${script} [FORMAT] [MODE] [DELAY|stop]
${script} --help|-h

options:
FORMAT picture|video
MODE   all|area|output|output_focused|window|window_focused|workspace|workspace_focused
DELAY  <integer seconds>

${script} picture window 5      capture picture of the selected window after 5s
${script} <no options>|picture  same as '${script} picture area'
${script} video                 same as '${script} video area'
${script} video stop            stop recording video
${script} --help|-h             print this message"

case "${1:-""}" in
  "--help"|"-h")
    echo "$msg_usage"
    exit
  ;;
esac

path_dir="${HOME}/scr"

capture_format="${1:-"picture"}"
capture_mode="${2:-"area"}"
delay="${3:-"0"}"

display_server=""

if [ "${WAYLAND_DISPLAY:-""}" ]; then
  display_server="wayland"
fi

if [ "${DISPLAY:-""}" ] && [ -z "${WAYLAND_DISPLAY:-""}" ]; then
  display_server="x11"
fi

i3blocks_signal() {
  if [ "${1:-""}" = "wait" ]; then sleep "1"; fi

  if pidof -q "i3blocks"; then
    pkill "-SIGRTMIN+7" "i3blocks"
  fi
}

saved() {
  i3blocks_signal 1>/dev/null 2>/dev/null & disown

  (
    if [ "$(notify-send "Screen capture (${capture_format}) saved." "$path_out" --app-name="$script" --action="LOCATE=Locate" --wait)" ]; then
      file_manager_desktop "$path_out"
    fi
  ) 1>/dev/null 2>/dev/null & disown

  echo "${script}: Screen capture (${capture_format}) saved at ${path_out}"

  case "$display_server" in
    "wayland")
      printf '%s' "$path_out" | wl-copy
    ;;
    "x11")
      printf '%s' "$path_out" | xclip -sel "clipboard"
    ;;
  esac

  exit
}

canceled() {
  i3blocks_signal 1>/dev/null 2>/dev/null & disown

  # notify-send "Screen capture (${capture_format}) canceled." --app-name="$script" --urgency="low" 1>/dev/null 2>/dev/null & disown
  echo "${script}: Screen capture (${capture_format}) canceled." 1>&2

  exit "6"
}

failed() {
  i3blocks_signal 1>/dev/null 2>/dev/null & disown

  notify-send "Screen capture (${capture_format}) failed." --app-name="$script" --urgency="critical" 1>/dev/null 2>/dev/null & disown
  echo "${script}: Screen capture (${capture_format}) failed." 1>&2

  exit "2"
}

failed_no_audio() {
  i3blocks_signal 1>/dev/null 2>/dev/null & disown

  notify-send "Screen capture (${capture_format}) failed. Cannot get the default audio device." --app-name="$script" --urgency="critical" 1>/dev/null 2>/dev/null & disown
  echo "${script}: Screen capture (${capture_format}) failed. Cannot get the default audio device." 1>&2

  exit "2"
}

not_implemented() {
  msg="Not implemented (${display_server}): ${capture_mode} ${capture_mode}"

  notify-send "$msg" --app-name="$script" --urgency="critical" 1>/dev/null 2>/dev/null & disown
  echo "${script}: $msg" 1>&2

  exit "5"
}

no_display_server() {
  echo "Must be ran under X11 or Wayland." 1>&2

  exit "2"
}

no_area_selected() {
  notify-send "No screen area selected." --app-name="$script" --urgency="critical" 1>/dev/null 2>/dev/null & disown
  echo "${script}: No screen area selected." 1>&2

  exit "2"
}

countdown() {
  while [ "$delay" -gt "0" ]; do
    delay="$((delay - 1))"

    sleep "1"

    echo "$delay"
  done

  i3blocks_signal "wait" 1>/dev/null 2>/dev/null & disown
}

ptr_coord_output() {
  set +e
  swaymsg -t "get_outputs" | jq -r ".. | select(.active?).rect | ${jq_rect_map}" | slurp 2>&1
  set -e
  return "0"
}

ptr_coord_output_focused() {
  set +e
  swaymsg -t "get_outputs" | jq -r ".. | select(.focused?).rect | ${jq_rect_map}"
  set -e
  return "0"
}

ptr_coord_window() {
  set +e
  swaymsg -t "get_tree" | jq -r ".. | select(.pid? and .visible?).rect | ${jq_rect_map}" | slurp 2>&1
  set -e
  return "0"
}

ptr_coord_window_focused() {
  set +e
  swaymsg -t "get_tree" | jq -j ".. | select(.type? and .focused?).rect | ${jq_rect_map}"
  set -e
  return "0"
}

ptr_coord_workspace() {
  set +e
  swaymsg -t "get_workspaces" | jq -r ".. | select(.visible? and .type == \"workspace\").rect | ${jq_rect_map}" | slurp 2>&1
  set -e
  return "0"
}

ptr_coord_workspace_focused() {
  set +e
  swaymsg -t "get_workspaces" | jq -r ".. | select(.focused? and .type == \"workspace\").rect | ${jq_rect_map}"
  set -e
  return "0"
}

ptr_coord=""
jq_rect_map='"\(.x),\(.y) \(.width)x\(.height)"'

case "$capture_format" in
  "video")
    path_out="${path_dir}/$(date "+%s").mp4"

    case "$capture_mode" in
      "stop")
        case "$display_server" in
          "wayland")
            set +e
            pkill -SIGINT -f "wf-recorder"
            pkill -SIGINT -f "slurp"
            set -e

            i3blocks_signal 1>/dev/null 2>/dev/null & disown

            exit "0"
          ;;
          "x11")
            not_implemented
          ;;
          *)
            no_display_server
          ;;
        esac
      ;;
      "all"|"area"|"output"|"output_focused"|"window"|"window_focused"|"workspace"|"workspace_focused")
        case "$display_server" in
          "wayland")
            if pidof -q "wf-recorder" || pidof -q "slurp"; then
              exit "3"
            fi

            case "$capture_mode" in
              "all")
                not_implemented
              ;;
              "area")
                ptr_coord="$(set +e; slurp 2>&1; set -e)"
              ;;
              "output")
                ptr_coord="$(ptr_coord_output)"
              ;;
              "output_focused")
                ptr_coord="$(ptr_coord_output_focused)"
              ;;
              "window")
                ptr_coord="$(ptr_coord_window)"
              ;;
              "window_focused")
                ptr_coord="$(ptr_coord_window_focused)"
              ;;
              "workspace")
                ptr_coord="$(ptr_coord_workspace)"
              ;;
              "workspace_focused")
                ptr_coord="$(ptr_coord_workspace_focused)"
              ;;
            esac

            if [ -z "$ptr_coord" ]; then
              no_area_selected
            fi

            if [ "$ptr_coord" = "selection cancelled" ]; then
              canceled
            fi

            set +e;
            audio_dev="$(pactl get-default-sink)"
            set -e;

            if [ -z "$audio_dev" ]; then
              failed_no_audio
            fi

            countdown

            if ! wf-recorder --audio="${audio_dev}.monitor" --codec="libx264rgb" --geometry="$ptr_coord" --file="$path_out"; then
              failed
            fi

            saved
          ;;
          "x11")
            not_implemented
          ;;
          *)
            no_display_server
          ;;
        esac
      ;;
      "-h"|"--help")
        echo "$msg_usage"
        exit "0"
      ;;
      *)
        echo "$msg_usage" 1>&2
        exit "1"
      ;;
    esac
  ;;
  "picture")
    path_out="${path_dir}/$(date "+%s").png"

    case "$display_server" in
      "wayland")
        if pidof -q "grim" || pidof -q "dulcepan"; then
          exit "3"
        fi

        case "$capture_mode" in
          "all")
            countdown

            if ! grim "$path_out"; then
              failed
            fi

            saved

          ;;
          "area")
            countdown

            set +e
            dulcepan_stderr="$(dulcepan -f "png" -o "$path_out" 2>&1)"
            dulcepan_exit="$?"
            set -e

            if [ "$dulcepan_exit" != "0" ]; then
              if [ -z "$dulcepan_stderr" ]; then
                canceled
              fi

              if [ "$dulcepan_stderr" = "[FATAL] The selection is empty" ]; then
                no_area_selected
              fi

              failed
            fi

            saved
          ;;
          "output")
            ptr_coord="$(ptr_coord_output)"
          ;;
          "output_focused")
            ptr_coord="$(ptr_coord_output_focused)"
          ;;
          "window")
            ptr_coord="$(ptr_coord_window)"
          ;;
          "window_focused")
            ptr_coord="$(ptr_coord_window_focused)"
          ;;
          "workspace")
            ptr_coord="$(ptr_coord_workspace)"
          ;;
          "workspace_focused")
            ptr_coord="$(ptr_coord_workspace_focused)"
          ;;
          *)
            echo "$msg_usage" 1>&2
            exit "1"
          ;;
        esac

        if [ -z "$ptr_coord" ]; then
          no_area_selected
        fi

        if [ "$ptr_coord" = "selection cancelled" ]; then
          canceled
        fi

        countdown

        if ! grim -g "$ptr_coord" "$path_out"; then
          failed
        fi

        saved
      ;;
      "x11")
        case "${capture_mode:-""}" in
          "all")
            if ! maim -d "$delay" -u "$path_out"; then
              failed
            fi

            saved
          ;;
          "area")
            if ! maim -d "$delay" -u --select "$path_out"; then
              failed
            fi

            saved
          ;;
          "output")
            # prompt to use pointer coordinates to select the output ?
            #
            # if ! maim -d "$delay" -u -g "..." "$path_out"; then
            #   failed
            # fi
            #
            # saved

            not_implemented
          ;;
          "output_focused")
            mouseloc="$(xdotool "getmouselocation")"

            m_x="${mouseloc##x:}"
            m_x="${m_x%% *}"

            m_y="${mouseloc##*y:}"
            m_y="${m_y%% *}"

            outputs="$(set +e; xrandr | grep " connected "; set -e)"

            o_coords=""

            IFS="$NL"
            for o in $outputs; do
              IFS="$IFS_"

              # o_name="${o%%" "*}"

              o_coords="${o##*" connected "}"
              o_coords="${o_coords##"primary "}"
              o_coords="${o_coords%%" "*}"

              o_width="${o_coords%%"x"*}"

              o_height="${o_coords##*"x"}"
              o_height="${o_height%%"+"*}"

              o_x_offset="${o_coords##"${o_width}x${o_height}+"}"
              o_x_offset="${o_x_offset%%"+"*}"

              o_y_offset="${o_coords##"${o_width}x${o_height}+${o_x_offset}+"}"

              if   [ "$m_x" -ge "$o_x_offset" ] \
                && [ "$m_x" -le "$((o_width + o_x_offset))" ] \
                && [ "$m_y" -ge "$o_y_offset" ] \
                && [ "$m_y" -le "$((o_height + o_y_offset))" ]
              then
                break
              fi
            done
            IFS="$IFS_"

            if ! maim -d "$delay" -u -g "$o_coords" "$path_out"; then
              failed
            fi

            saved
          ;;
          "window")
            # see i3_get_win_criteria
            # window_id="$(xwininfo -int | sed -nre "s/^xwininfo: Window id: (${match_int}) .*$/\1/p")"
            #
            # if ! maim -d "$delay" -u --window "..." "$path_out"; then
            #   failed
            # fi
            #
            # saved

            not_implemented
          ;;
          "window_focused")
            if ! maim -d "$delay" -u --window "$(xdotool "getactivewindow")" "$path_out"; then
              failed
            fi

            saved
          ;;
          "workspace")
            # prompt to use pointer coordinates to select the workspace ?
            # query i3 for the focused workspace geometry ?
            #
            # if ! maim -d "$delay" -u -g "..." "$path_out"; then
            #   failed
            # fi
            #
            # saved

            not_implemented
          ;;
          "workspace_focused")
            # xdotool get_desktop_for_window ?
            # query i3 for the focused workspace geometry ?
            #
            # if ! maim -d "$delay" -u -g "..." "$path_out"; then
            #   failed
            # fi
            #
            # saved

            not_implemented
          ;;
          *)
            echo "$msg_usage" 1>&2
            exit "1"
          ;;
        esac
      ;;
      *)
        no_display_server
      ;;
    esac
  ;;
  *)
    echo "$msg_usage" 1>&2
    exit "1"
  ;;
esac
