#!/usr/bin/env sh

devices="$(find "/dev" -type "c" -name 'video*')"

if [ -z "$devices" ]; then exit "1"; fi

device="$(echo "$devices" | dmenu -b -p "Device:")"

if [ -z "$device" ]; then exit "2"; fi

exec mpv \
  --demuxer-lavf-format=video4linux2 \
  --demuxer-lavf-o-set=input_format=mjpeg \
  --force-seekable=yes \
  "av://v4l2:${device}"
