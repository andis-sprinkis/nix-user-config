#!/usr/bin/env sh
set -eu

cmd_menu="${WAYLAND_DISPLAY:+"wmenu -p 'Device:'"}"

if [ "${DISPLAY:-""}" ] && [ -z "${WAYLAND_DISPLAY:-""}" ]; then
  cmd_menu="dmenu -p 'Device:'"
fi

if [ -z "$cmd_menu" ]; then
  exit "1"
fi

devices="$(find "/dev" -type "c" -name 'video*')"

if [ -z "$devices" ]; then
  exit "2"
fi

device="$(echo "$devices" | $cmd_menu)"

if [ -z "$device" ]; then
  exit "3"
fi

exec mpv \
  --demuxer-lavf-format=video4linux2 \
  --demuxer-lavf-o-set=input_format=mjpeg \
  --force-seekable=yes \
  "av://v4l2:${device}"
