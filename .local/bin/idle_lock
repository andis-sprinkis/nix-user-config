#!/usr/bin/env sh

case "$(idle_manager_status)" in
  "unknown")
    exit "1"
  ;;
  "stopped")
    idle_manager_start &
    while [ "$(idle_manager_status)" = "stopped" ]; do sleep "0.5"; done
  ;;
esac

[ "$DISPLAY" ] && [ -z "$WAYLAND_DISPLAY" ] && {
  exec xscreensaver-command -lock
}

exec killall -u "$(whoami)" -s "SIGUSR1" "swayidle"
