#!/usr/bin/env sh
set -eu

cmd_inc_bin_path="(stest -flx \$(echo \$PATH | tr : ' ')"

cmd_applications_menu="(cat; ${cmd_inc_bin_path} | sort -u)) | menu_desktop -p 'Open with:'"

cmd_args="$(
  j4-dmenu-desktop \
  --no-generic \
  --skip-i3-exec-check \
  --display-binary \
  --term-mode="custom" \
  --term="${TERMINAL} -e {cmdline@}" \
  --dmenu="$cmd_applications_menu" \
  --no-exec \
  2> "/dev/null"
)"

if [ -z "$cmd_args" ]; then
  exit "0"
fi

cmd=""
for a in $cmd_args; do
  arg="$a"
  arg="${arg#"'"}"
  arg="${arg%"'"}"
  cmd="${cmd:+"$cmd "}${arg}"
done

if echo "$cmd" | grep -q "^${TERMINAL} -e "; then
  $cmd "$@" 1> "/dev/null" 2> "/dev/null" & disown
  exit "0"
fi

if ! echo "$cmd" | grep -q "^/bin/sh -c "; then
  $cmd "$@" 1> "/dev/null" 2> "/dev/null" & disown 
  exit "0"
fi

cmd="${cmd#"/bin/sh -c "}"

if echo "$cmd" | grep -iq '^.*.\.appimage$'; then
  $cmd "$@" 1> "/dev/null" 2> "/dev/null" & disown
  exit "0"
fi

$TERMINAL -e $cmd "$@" 1> "/dev/null" 2> "/dev/null" & disown

exit "0"
