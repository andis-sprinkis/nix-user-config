#!/usr/bin/env sh
set -eu

# Shows menu that lists bookmarks of URI or file paths to be opened via xdg-open.
#
# The bookmark line format:
#
# #  Bookmark title  ~  Bookmark URI or file path
#
# The lines that don't begin with '#  ' are ignored.

cmd_menu="${WAYLAND_DISPLAY:+"wmenu"}"

if [ "${DISPLAY:-""}" ] && [ -z "${WAYLAND_DISPLAY:-""}" ]; then
  cmd_menu="dmenu"
fi

if [ -z "$cmd_menu" ]; then
  exit "7"
fi

bmark_file_dir="${XDG_DATA_HOME:-$HOME/.local/share}/bmark_desktop"
bmark_file="${bmark_file_dir}/marks"

if [ ! -f "$bmark_file" ]; then
  mkdir -p "$bmark_file_dir"
  touch "$bmark_file"
fi

if [ ! -r "$bmark_file" ]; then
  exit "9"
fi

bmark_lines="$(set +e; grep "^#  " < "$bmark_file"; set -e)"

line_edit_bmarks="Edit bookmarks..."

menu_lines="${bmark_lines:+$(echo "$bmark_lines" | sed -e 's/^#  //g' -e 's/  \~  / \(/g' -e 's/$/\)/g')
}$line_edit_bmarks"

sel_txt="$(echo "$menu_lines" | "$cmd_menu" -p "Bookmark:")"

if [ -z "$sel_txt" ]; then
  exit "8"
fi

if [ -z "${sel_txt#"$line_edit_bmarks"}" ]; then
  exec "editor_desktop" "$bmark_file" 1> "/dev/null" 2> "/dev/null" & disown
fi

sel_idx="$(echo "$menu_lines" | grep --line-number -x "$sel_txt" | cut -d ":" -f 1)"
sel_bmark_line="$(echo "$bmark_lines" | sed "${sel_idx}q;d")"
sel_uri="$(echo "$sel_bmark_line" | awk -F"  ~  " '{ print $2 }')"

if [ -z "$sel_uri" ]; then
  exit "8"
fi

xdg-open "$sel_uri" 1> "/dev/null" 2> "/dev/null" & disown
