#!/usr/bin/env sh
set -eu

[ "$*" ] || {
  echo "$(basename "$0"): No path specified"
  exit "1"
}

[ "$WAYLAND_DISPLAY" ] && [ "$(command -v "wl-paste")" ] && exec wl-paste >> "$@"

[ "$DISPLAY" ] && [ -z "$WAYLAND_DISPLAY" ] && [ "$(command -v "xclip")" ] && exec xclip -o -sel "clipboard" >> "$@"

[ "$(command -v "pbcopy")" ] && exec pbpaste >> "$@"

exit "1"
