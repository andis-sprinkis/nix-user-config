#!/usr/bin/env sh
set -eu
BAT_STYLE="plain"

mime="$(file --mime-type --brief "$(readlink -f "$1")")"

echo "$mime"

case $mime in
  application/eps|application/pdf|application/postscript|application/x-eps|image/x-eps)
    pdfinfo "$1"
    echo
    pdftotext -l "2" -nopgbrk -q -- "$1" -
  ;;
  application/bzip*|application/gzip|application/vnd.rar|application/x-7z-compressed|application/x-rar|application/x-tar|application/x-xz|application/zip)
    als -- "$1"
  ;;
  image/*)
    chafa --format "symbols" --font-ratio "1/2" --animate "off" --polite "on" --work "1" -s "${2:-80}x${3:-120}" "$1"
  ;;
  audio/mpeg)
    mpg123-id3dump -- "$1"
  ;;
  *opendocument*)
    odt2txt "$1"
  ;;
  application/vnd.sqlite3|application/vnd.sqlite)
    sqlite3 "$1" '.tables'
  ;;
  inode/directory)
    ls -la "$1"
  ;;
  *)
    bat --color always -- "$1"
  ;;
esac

exit "1"
