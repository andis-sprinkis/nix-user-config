#!/usr/bin/env sh
set -eu

connectivity="$(nmcli networking connectivity)"

if [ -z "$connectivity" ]; then
  exit "0"
fi

if [ "${BLOCK_BUTTON:-""}" ]; then
  reload() {
    if [ "${signal-""}" ]; then
      (sleep "${1:-"0.5"}"; pkill "-SIGRTMIN+${signal}" "i3blocks") 1> "/dev/null" 2> "/dev/null" & disown
    fi
  }

  case "$BLOCK_BUTTON" in
    "1")
      $TERMINAL -e "$SHELL" -c "sleep \"0.5\"; set +e; nmcli device wifi rescan 2> /dev/null; set -e; nmtui" 1> "/dev/null" 2> "/dev/null" & disown
    ;;
    "3")
      case "$connectivity" in
        "full"|"portal"|"limited") 
          nmcli networking off 1> "/dev/null" 2> "/dev/null" & disown
          reload
          exec echo "Disabling connectivity...
Disabling conn.k."
        ;;
        *)
          nmcli networking on 1> "/dev/null" 2> "/dev/null" & disown
          reload "2"
          exec echo "Enabling connectivity...
Enabling conn.k."
        ;;
      esac
    ;;
    "2")
      "${XDG_DATA_HOME:-$HOME/.local/share}/i3/new_workspace" 1> "/dev/null" 2> "/dev/null" & disown
    ;;
    "4")
      "${XDG_DATA_HOME:-$HOME/.local/share}/i3/temp_no_mouse_warping_container" "workspace" "prev_on_output" 1> "/dev/null" 2> "/dev/null" & disown
    ;;
    "5")
      "${XDG_DATA_HOME:-$HOME/.local/share}/i3/temp_no_mouse_warping_container" "workspace" "next_on_output" 1> "/dev/null" 2> "/dev/null" & disown
    ;;
  esac
fi

case "$connectivity" in
  "full")
    echo "Network connected
Net. connected"
  ;;
  "none")
    echo "Network disconnected
Net. disconnected"
  ;;
  "limited")
    echo "Network connected (limited)
Net. connected (limited)"
  ;;
  "unknown")
    echo "Network connectivity unknown
Net. conn.k. unknown"
  ;;
  "portal")
    echo "Network connected (portal)
Net. connected (portal)"
  ;;
  *)
    echo "Network connectivity status: ${connectivity}
Net. conn.k. status: ${connectivity}"
  ;;
esac
