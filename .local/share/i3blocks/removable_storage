#/usr/bin/env sh

fstab_storage="$(cat "/etc/fstab" | grep "^.*." | grep --invert "#")"

num="0"
IFS='\n'
for i in "$(lsblk -l -n -o "MOUNTPOINTS" | grep "^.*.")"; do
  [ "$(printf "$fstab_storage" | grep " $i ")" ] && {
    num="$(("$num" + "1"))"
  }
done

[ "$num" != "" ] && echo "$num rm. stg. dev. mounted"
