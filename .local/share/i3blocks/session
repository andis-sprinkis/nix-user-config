#!/usr/bin/env sh

REPORT_WAYLAND="${REPORT_WAYLAND:-0}"
REPORT_X11="${REPORT_X11:-1}"

[ "$DISPLAY" ] && [ -z "$WAYLAND_DISPLAY" ] && {
  [ "$REPORT_X11" = "1" ] && exec echo "${LABEL_X11:-On X11}"
  exit "0"
}

[ "$WAYLAND_DISPLAY" ] && {
  [ "$REPORT_WAYLAND" = "1" ] && exec echo "${LABEL_WAYLAND:-On Wayland}"
  exit "0"
}

exit "1"
