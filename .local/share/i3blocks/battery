#!/usr/bin/env sh
set -eu
IFS_="$IFS"

batteries="$(find "/sys/class/power_supply/" -name "BAT*")"

if [ "${BLOCK_BUTTON:-""}" ]; then
  case "$BLOCK_BUTTON" in
    "1"|"3")
      cmd="echo \"\033]0;Battery information\007\"; acpi -i | ${PAGER}"
      $TERMINAL -e "$SHELL" -c "$cmd" 1> "/dev/null" 2> "/dev/null" & disown
    ;;
    "4")
      brightnessctl -q set "+2%" 1> "/dev/null" 2> "/dev/null" & disown
    ;;
    "5")
      brightnessctl -q set "2%-" 1> "/dev/null" 2> "/dev/null" & disown
    ;;
  esac
fi

if [ -z "$batteries" ]; then
  exit "0"
fi

info="$(
IFS="
"
for battery in $batteries; do
  IFS="$IFS_"

  capacity="$(cat "${battery}/capacity" 2>&1)"
  status="$(cat "${battery}/status" 2>&1)"

  case "$status" in
    "Full")
      echo "Battery full
Bat. full"
    ;;
    "Discharging")
      if [ "$capacity" -gt 25 ]; then
        echo "Battery discharging, ${capacity}%
Bat. discharging, ${capacity}%"
      else
        echo "Battery discharging, ⚠️ ${capacity}%
Bat. discharging, ⚠️ ${capacity}%"
      fi
    ;;
    "Charging")
      echo "Battery charging, ${capacity}%
Bat. charging, ${capacity}%"
    ;;
    "Not charging")
      echo "Battery not charging, ⚠️ ${capacity}%
Bat. not charging, ⚠️ ${capacity}%"
    ;;
    *)
      echo "Battery state unknown, ⚠️ ${capacity}%
Bat. state unknown, ⚠️ ${capacity}%"
    ;;
  esac
done
IFS="$IFS_"
)"

cols="$(echo "$batteries" | wc -l)"

if [ "$info" ]; then
  echo "$info" | pr -"$cols" -t -s' '
fi
