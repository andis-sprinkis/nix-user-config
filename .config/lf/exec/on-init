#!/usr/bin/env sh
set -eu

"${XDG_DATA_HOME:-"$HOME/.local/share"}/lf/quittimer" 1> "/dev/null" 2> "/dev/null" & disown

"${XDG_CONFIG_HOME:-"$HOME/.config"}/lf/exec/_set-ratios"
"${XDG_CONFIG_HOME:-"$HOME/.config"}/lf/exec/_set-title"
"${XDG_CONFIG_HOME:-"$HOME/.config"}/lf/exec/_set-rulerfmt"

lf -remote "send ${id} reload"
