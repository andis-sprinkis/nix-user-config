# vi: ft=ini

[date]
command=${XDG_DATA_HOME:-$HOME/.local/share}/i3blocks/date
interval=15

[time]
command=${XDG_DATA_HOME:-$HOME/.local/share}/i3blocks/time
interval=15

[session]
command=${XDG_DATA_HOME:-$HOME/.local/share}/i3blocks/session
interval=once

[connectivity_nm]
command=${XDG_DATA_HOME:-$HOME/.local/share}/i3blocks/connectivity_nm
interval=5
signal=1

[bluetooth]
command=${XDG_DATA_HOME:-$HOME/.local/share}/i3blocks/bluetooth
interval=10
signal=4

[sshd]
command=${XDG_DATA_HOME:-$HOME/.local/share}/i3blocks/sshd
interval=5

[smb]
command=${XDG_DATA_HOME:-$HOME/.local/share}/i3blocks/smb
interval=5

[removable_storage]
command=${XDG_DATA_HOME:-$HOME/.local/share}/i3blocks/removable_storage
interval=5

[player]
command=${XDG_DATA_HOME:-$HOME/.local/share}/i3blocks/player
interval=5
signal=6

[idle_manager]
command=${XDG_DATA_HOME:-$HOME/.local/share}/i3blocks/idle_manager
interval=5
signal=2

[battery]
command=${XDG_DATA_HOME:-$HOME/.local/share}/i3blocks/battery
interval=10

[sound]
command=${XDG_DATA_HOME:-$HOME/.local/share}/i3blocks/sound
interval=3
signal=3
SUFFIX=  
