bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

bindsym $mod+Shift+Prior  workspace prev
bindsym $mod+Shift+Next   workspace next
bindsym $mod+Prior        workspace prev_on_output
bindsym $mod+Next         workspace next_on_output

bindsym --whole-window Shift+button9 workspace prev
bindsym --whole-window Shift+button8 workspace next
bindsym --whole-window button9       workspace prev_on_output
bindsym --whole-window button8       workspace next_on_output

bindsym $mod+Mod1+Prior             exec --no-startup-id ${XDG_DATA_HOME:-$HOME/.local/share}/i3/shift_current_workspace -prev
bindsym $mod+Mod1+Next              exec --no-startup-id ${XDG_DATA_HOME:-$HOME/.local/share}/i3/shift_current_workspace -next
bindsym --whole-window Mod1+button9 exec --no-startup-id ${XDG_DATA_HOME:-$HOME/.local/share}/i3/shift_current_workspace -prev
bindsym --whole-window Mod1+button8 exec --no-startup-id ${XDG_DATA_HOME:-$HOME/.local/share}/i3/shift_current_workspace -next

bindsym $mod+Shift+r exec --no-startup-id ${XDG_CONFIG_HOME:-HOME/.config}/xinit/xinitrc

bindsym $mod+Shift+q exec \
"i3-nagbar -t warning -f $font -m 'Exit i3?' -b 'Yes' 'i3-msg exit'"

bindsym Menu exec --no-startup-id applications_menu_desktop

bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -D pulse sset Master 5%+ unmute
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -D pulse sset Master 5%- unmute
bindsym XF86AudioMute        exec --no-startup-id amixer -q set Master toggle

bindsym --whole-window $mod+button4 exec --no-startup-id amixer -D pulse sset Master 5%+ unmute
bindsym --whole-window $mod+button5 exec --no-startup-id amixer -D pulse sset Master 5%- unmute
bindsym --whole-window $mod+button2 exec --no-startup-id amixer -q set Master toggle

bindsym XF86MonBrightnessUp   exec --no-startup-id xbacklight -inc 5
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 5

bindsym $mod+n exec --no-startup-id ${XDG_DATA_HOME:-$HOME/.local/share}/i3/new_empty_workspace
bindsym $mod+m exec --no-startup-id ${XDG_DATA_HOME:-$HOME/.local/share}/i3/dmenu_move_to_workspace

bindsym $mod+Print       exec --no-startup-id screenshot_maim
bindsym $mod+Shift+Print exec --no-startup-id screenshot_maim --active
bindsym $mod+Ctrl+Print  exec --no-startup-id screenshot_maim --select

bindsym $mod+F12 exec --no-startup-id screen_lock_x

bindsym $mod+c exec --no-startup-id exec_active_win_x

bindsym $mod+slash exec --no-startup-id i3_key_mappings_desktop

set     $mode_resize "Resize container..."
bindsym $mod+r mode $mode_resize
mode $mode_resize {
  bindsym $left  resize shrink width 48
  bindsym $down  resize shrink height 48
  bindsym $up    resize grow height 48
  bindsym $right resize grow width 48
  bindsym Escape mode "default"
}
