#!/usr/bin/env sh
set -e

# GUI environment variables

. "${XDG_CONFIG_HOME:-$HOME/.config}/shell/gui.sh"

# gsettings

set="gsettings set org.gnome.desktop.interface"

$set "color-scheme" "prefer-dark"
$set "cursor-blink" "false"
$set "cursor-size" "42"
$set "enable-animations" "false"
$set "font-name" "${GUI_FONT_FAMILY_GUI} ${GUI_FONT_STYLE} ${GUI_FONT_SIZE_GTK}"
$set "text-scaling-factor" "1.15"
$set "monospace-font-name" "${GUI_FONT_FAMILY_TERM} ${GUI_FONT_SIZE_GTK}"
