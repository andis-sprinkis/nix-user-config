#!/usr/bin/env sh
set -e

# GUI environment variables

. "${XDG_CONFIG_HOME:-$HOME/.config}/shell/gui.sh"

# gsettings

set="gsettings set"

$set "org.gnome.desktop.interface"  "color-scheme"              "prefer-dark"
$set "org.gnome.desktop.interface"  "cursor-blink"              "false"
$set "org.gnome.desktop.interface"  "cursor-size"               "42"
$set "org.gnome.desktop.interface"  "enable-animations"         "false"
$set "org.gnome.desktop.interface"  "font-name"                 "${GUI_FONT_FAMILY_GUI} ${GUI_FONT_STYLE} ${GUI_FONT_SIZE_GTK}"
$set "org.gnome.desktop.interface"  "monospace-font-name"       "${GUI_FONT_FAMILY_TERM} ${GUI_FONT_SIZE_GTK}"
$set "org.gnome.desktop.interface"  "text-scaling-factor"       "1.15"
$set "org.gnome.desktop.privacy"    "recent-files-max-age"      "-1"
$set "org.gnome.desktop.privacy"    "remember-recent-files"     "false"
$set "org.gnome.desktop.privacy"    "report-technical-problems" "false"
$set "org.gnome.desktop.privacy"    "send-software-usage-stats" "false"
$set "org.gtk.Settings.FileChooser" "date-format"               "with-time"
$set "org.gtk.Settings.FileChooser" "show-hidden"               "true"
$set "org.gtk.Settings.FileChooser" "sort-directories-first"    "true"
